{
  "name": "revenium-chatgpt-meter",
  "version": "1.0.0",
  "description": "Real-time cost, token, and latency meter for ChatGPT",
  "main": "src/meter-core.js",
  "scripts": {
    "build:tiktoken": "npm run copy:tiktoken:wasm && npm run bundle:tiktoken",
    "bundle:tiktoken": "esbuild node_modules/@dqbd/tiktoken/dist/tiktoken.js --bundle --outfile=src/vendor/tiktoken.min.js --format=esm",
    "copy:tiktoken:wasm": "cp node_modules/@dqbd/tiktoken/tiktoken_bg.wasm src/vendor/",
    "clean": "rm -rf src/vendor/tiktoken*.{js,wasm}",
    "package": "zip -r revenium-chatgpt-meter.zip . -x 'node_modules/*' '*.git/*' 'package*.json' '.DS_Store'",
    "test": "echo 'No tests configured yet'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/revenium-chatgpt-meter.git"
  },
  "keywords": [
    "chatgpt",
    "openai",
    "tokens",
    "cost",
    "metrics",
    "chrome-extension",
    "analytics"
  ],
  "author": "Revenium",
  "license": "MIT",
  "devDependencies": {
    "esbuild": "^0.19.0"
  },
  "optionalDependencies": {
    "@dqbd/tiktoken": "^1.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
