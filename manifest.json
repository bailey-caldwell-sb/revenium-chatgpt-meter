{
  "manifest_version": 3,
  "name": "Revenium ChatGPT Live Meter",
  "version": "1.0.0",
  "description": "Real-time cost, token, and latency meter for ChatGPT by Revenium.",
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*"
  ],
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "background": {
    "service_worker": "src/sw.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": ["src/content.js"],
      "run_at": "document_start",
      "all_frames": false
    },
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": ["src/inject.js"],
      "run_at": "document_start",
      "world": "MAIN",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/vendor/*"],
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ]
    }
  ],
  "action": {
    "default_title": "Revenium ChatGPT Live Meter",
    "default_popup": "src/popup.html"
  },
  "options_page": "src/options.html",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
